<configuration>
    <appender name="LOKI" class="com.github.loki4j.logback.Loki4jAppender">
        <http>
            <url>https://loki.xiyo.dev/loki/api/v1/push</url>
        </http>
        <format>
            <label>
                <pattern>app=unidcat-api,level=%level</pattern>
            </label>
            <message>
                <pattern>l=%level c=%logger{20} t=%thread | %msg %ex</pattern>
            </message>
        </format>
    </appender>

    <root level="DEBUG">
        <appender-ref ref="LOKI"/>
    </root>
</configuration>